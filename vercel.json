{
  "version": 2,
  "builds": [
    {
    "src": "package.json",
    "use": "@vercel/static-build",
    "config": {
      "distDir": "public"
    }
  }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "images": {
    "sizes": [640, 1280, 1920],
    "minimumCacheTTL": 60
  },
  "headers": [
    {
    "source": "/(.*)",
    "headers": [
      {
        "key": "X-Frame-Options",
        "value": "DENY"
      },
      {
        "key": "X-Content-Type-Options",
        "value": "nosniff"
      },
      {
        "key": "X-XSS-Protection",
        "value": "1; mode=block"
      }
    ]
  }
  ]
}